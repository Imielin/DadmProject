<Window x:Class="EKG_Project.GUI.PdfPathDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Get output PDF file..." SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="images/pdf.png" Width="32" Height="32" Grid.RowSpan="2" Margin="17,10,23,2" />

        <Label Name="lblQuestion" Grid.Column="1">Specify output file path:</Label>
        <TextBox Name="txtPdfPath" Grid.Column="1" Grid.Row="1" MinWidth="250" Margin="0,0,10,0"></TextBox>

        <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" x:Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0" Content="_OK"/>
        </WrapPanel>
    </Grid>
</Window>
