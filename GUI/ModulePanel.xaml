<UserControl x:Class="EKG_Project.GUI.ModulePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EKG_Project.GUI"
             mc:Ignorable="d">
    <Grid>
        <TreeView x:Name="treeViewModules" Width="310" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:ModuleOption}" ItemsSource="{Binding Path=Suboptions}">
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <CheckBox Name="chk" Margin="2" Tag="{Binding Path=Name}" IsChecked="{Binding Path=Set, Mode=TwoWay}" IsEnabled="{Binding Path=Parent.Set}"/>
                            <Label Name="txt" Content="{Binding Path=Name}"></Label>
                        <Button Name="btn" IsEnabled="{Binding Path=Set}" Click="btn_Click">Options</Button>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
