<UserControl x:Class="EKG_Project.GUI.AnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EKG_Project.GUI"
             mc:Ignorable="d">
    <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <local:ModulePanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,0"/>
        <Button x:Name="exitButton" Grid.Column="1" Grid.Row="1" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="exitButton_Click"/>
    </Grid>
</UserControl>
